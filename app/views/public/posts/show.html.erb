<h3><%= @post.title %></h3>
<p><%= @post.content %></p>
<p><%= @post.score %></p>
<p>
  <% @post.post_genres.each do |f| %>
    <span>:
      <%= link_to homes_genre_scope_path(genre_id: f.genre.id) do %>
        <%= f.genre.name %>
      <% end %>
    </span>
  <% end %><!--each f-->
</p>


<% if @post.user_id == current_user.id %>
  <%= link_to "Edit", edit_post_path(@post.id), class:"btn btn-sm btn-success" %>
  <%= link_to "Destroy", post_path(@post.id), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-sm btn-danger" %>
<% end %><!--if user current_user?-->

<% if admin_signed_in? %>
  <%= link_to "Destroy", post_path(@post.id), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-sm btn-danger" %>
<% end %><!--if user admin?-->